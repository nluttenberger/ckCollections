  <fr:recipeName>Rissole ripiene-gef&#252;llte Teigtaschen</fr:recipeName>
  <fr:recipeKeywords />
  <fr:recipeIntro />
  <fr:recipeIngredients>
    <fr:igdtList>
      <fr:igdtListName />
