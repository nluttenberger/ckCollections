      <fr:igdtListLine>
        <fr:igdtQuantity>4 EL</fr:igdtQuantity>
        <fr:igdtName ref="nudeln">Penne oder H&#246;rnchennudeln</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity />
        <fr:igdtName ref="">Salz</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
