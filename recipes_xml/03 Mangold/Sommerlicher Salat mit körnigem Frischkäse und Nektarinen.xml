  <fr:recipeName>Sommerlicher Salat mit k&#246;rnigem Frischk&#228;se und Nektarinen</fr:recipeName>
  <fr:recipeKeywords />
  <fr:recipeIntro />
  <fr:recipeIngredients>
    <fr:igdtList>
      <fr:igdtListName />
      <fr:igdtListLine>
        <fr:igdtQuantity>150 g</fr:igdtQuantity>
        <fr:igdtName ref="roter_mangold">Pfl&#252;cksalat(e), Fris&#233;e, Rucola, roter Mangold, Lollo Rosso, Romana, gemischt</fr:igdtName>
      </fr:igdtListLine>
