  <fr:recipeName>Geschmorte Tintenfischtuben mit Graupen-Mangold-F&#252;llung</fr:recipeName>
  <fr:recipeKeywords />
  <fr:recipeIntro />
  <fr:recipeIngredients>
    <fr:igdtList>
      <fr:igdtListName />
      <fr:igdtListLine>
        <fr:igdtQuantity>3</fr:igdtQuantity>
        <fr:igdtName ref="tintenfisch">Tintenfisch(e), k&#252;chenfertige Tuben, insg. 300-350 g</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>40 g</fr:igdtQuantity>
        <fr:igdtName ref="graupen">Graupen</fr:igdtName>
      </fr:igdtListLine>
