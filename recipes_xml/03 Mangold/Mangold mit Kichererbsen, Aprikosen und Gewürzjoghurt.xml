      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>&#189; TL</fr:igdtQuantity>
        <fr:igdtName ref="koriander">Koriandersamen</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>150 g</fr:igdtQuantity>
        <fr:igdtName ref="joghurt">Joghurt, natur</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>1 Spritzer</fr:igdtQuantity>
