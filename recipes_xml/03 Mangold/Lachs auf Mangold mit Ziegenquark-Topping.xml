  <fr:recipeName>Lachs auf Mangold mit Ziegenquark-Topping</fr:recipeName>
  <fr:recipeKeywords />
  <fr:recipeIntro />
  <fr:recipeIngredients>
    <fr:igdtList>
      <fr:igdtListName />
      <fr:igdtListLine>
        <fr:igdtQuantity>440 g</fr:igdtQuantity>
        <fr:igdtName ref="lachs">Lachsfilet(s) mit Haut</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>500 g</fr:igdtQuantity>
