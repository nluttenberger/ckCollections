  <fr:recipeName>Mangold-Reis-Pfanne mit Feta, Pinienkernen und frischem Ingwer</fr:recipeName>
  <fr:recipeKeywords />
  <fr:recipeIntro />
  <fr:recipeIngredients>
    <fr:igdtList>
      <fr:igdtListName />
      <fr:igdtListLine>
        <fr:igdtQuantity>1 Sch&#228;lchen</fr:igdtQuantity>
        <fr:igdtName ref="reis">Reis, gekochter (z. B. Basmati)</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>3 Bl&#228;tter</fr:igdtQuantity>
        <fr:igdtName ref="mangold">Mangold</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>70 g</fr:igdtQuantity>
        <fr:igdtName ref="schafsk&#228;se">Feta-K&#228;se, laktosefrei</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>einige</fr:igdtQuantity>
        <fr:igdtName ref="pinienkerne">Pinienkerne</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>1 Scheibe/n</fr:igdtQuantity>
        <fr:igdtName ref="ingwer">Ingwer, frischer</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>etwas</fr:igdtQuantity>
