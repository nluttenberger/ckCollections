  <fr:recipeName>Mangold auf Toast oder Baguette</fr:recipeName>
  <fr:recipeKeywords />
  <fr:recipeIntro />
  <fr:recipeIngredients>
    <fr:igdtList>
      <fr:igdtListName />
      <fr:igdtListLine>
        <fr:igdtQuantity>25 Bl&#228;tter</fr:igdtQuantity>
        <fr:igdtName ref="mangold">Mangold, roter ist intensiver</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>2 Knolle/n</fr:igdtQuantity>
        <fr:igdtName ref="knoblauch">Knoblauch, am besten chinesischer Knollenknoblauch</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>2 gro&#223;e</fr:igdtQuantity>
