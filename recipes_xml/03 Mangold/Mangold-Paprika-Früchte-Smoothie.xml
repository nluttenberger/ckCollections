  <fr:recipeName>Mangold-Paprika-Fr&#252;chte-Smoothie</fr:recipeName>
  <fr:recipeKeywords />
  <fr:recipeIntro />
  <fr:recipeIngredients>
    <fr:igdtList>
      <fr:igdtListName />
      <fr:igdtListLine>
        <fr:igdtQuantity>6 Bl&#228;tter</fr:igdtQuantity>
        <fr:igdtName ref="mangold">Mangold, das Gr&#252;ne davon</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>&#189;</fr:igdtQuantity>
        <fr:igdtName ref="paprika">Paprikaschote(n), rot</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>10 Bl&#228;tter</fr:igdtQuantity>
