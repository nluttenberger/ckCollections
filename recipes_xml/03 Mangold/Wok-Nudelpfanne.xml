  <fr:recipeName>Wok-Nudelpfanne</fr:recipeName>
  <fr:recipeKeywords />
  <fr:recipeIntro />
  <fr:recipeIngredients>
    <fr:igdtList>
      <fr:igdtListName />
      <fr:igdtListLine>
        <fr:igdtQuantity>400 g</fr:igdtQuantity>
        <fr:igdtName ref="nudeln">Spaghetti oder Mie-Nudeln</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>8 Handvoll</fr:igdtQuantity>
        <fr:igdtName ref="zucchini">Gem&#252;se, z. B. Mangold, Paprikaschote, Zucchini, rote Zwiebeln</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>1 Handvoll</fr:igdtQuantity>
        <fr:igdtName ref="ingwer">Ingwer, frischer, gew&#252;rfelt</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>&#189; Glas</fr:igdtQuantity>
        <fr:igdtName ref="erdnussbutter">Erdnussbutter</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>100 ml</fr:igdtQuantity>
        <fr:igdtName ref="sojasauce">Sojasauce</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>etwas</fr:igdtQuantity>
