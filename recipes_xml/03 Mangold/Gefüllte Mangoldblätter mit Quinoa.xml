  <fr:recipeName>Gef&#252;llte Mangoldbl&#228;tter mit Quinoa</fr:recipeName>
  <fr:recipeKeywords />
  <fr:recipeIntro />
  <fr:recipeIngredients>
    <fr:igdtList>
      <fr:igdtListName />
      <fr:igdtListLine>
        <fr:igdtQuantity>1 Tasse</fr:igdtQuantity>
        <fr:igdtName ref="quinoa">Quinoa</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
