  <fr:recipeName>Gef&#252;llte Kalmare mit Mangold</fr:recipeName>
  <fr:recipeKeywords />
  <fr:recipeIntro />
  <fr:recipeIngredients>
    <fr:igdtList>
      <fr:igdtListName />
      <fr:igdtListLine>
        <fr:igdtQuantity>8 m.-gro&#223;e</fr:igdtQuantity>
        <fr:igdtName ref="kalmar">Kalmar(e), k&#252;chenfertig</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>&#189;</fr:igdtQuantity>
        <fr:igdtName ref="zitrone">Zitrone(n), Saft davon</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>4 kleine</fr:igdtQuantity>
        <fr:igdtName ref="sardelle">Sardellenfilet(s), abgewaschen und gehackt</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>1 Bund</fr:igdtQuantity>
        <fr:igdtName ref="petersilie">Petersilie, glatt, gehackt</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>1 Zweig/e</fr:igdtQuantity>
        <fr:igdtName ref="rosmarin">Rosmarin, frisch, gehackt</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>3</fr:igdtQuantity>
        <fr:igdtName ref="knoblauch">Knoblauchzehe(n), durchgepre&#223;t</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>3 EL</fr:igdtQuantity>
        <fr:igdtName ref="paniermehl">Semmelbr&#246;sel</fr:igdtName>
      </fr:igdtListLine>
