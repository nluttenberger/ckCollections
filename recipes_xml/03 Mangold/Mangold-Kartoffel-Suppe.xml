  <fr:recipeName>Mangold-Kartoffel-Suppe</fr:recipeName>
  <fr:recipeKeywords />
  <fr:recipeIntro />
  <fr:recipeIngredients>
    <fr:igdtList>
      <fr:igdtListName />
      <fr:igdtListLine>
        <fr:igdtQuantity>170 g</fr:igdtQuantity>
        <fr:igdtName ref="kartoffel">Kartoffel(n), gesch&#228;lt</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>400 g</fr:igdtQuantity>
        <fr:igdtName ref="mangold">Mangoldstiel(e)</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>750 ml</fr:igdtQuantity>
