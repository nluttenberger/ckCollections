  <fr:recipeName>Scampi in Tomaten-Mangold Sauce</fr:recipeName>
  <fr:recipeKeywords />
  <fr:recipeIntro />
  <fr:recipeIngredients>
    <fr:igdtList>
      <fr:igdtListName />
      <fr:igdtListLine>
        <fr:igdtQuantity>4</fr:igdtQuantity>
        <fr:igdtName ref="tomate">Eiertomate(n)</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>1 Bund</fr:igdtQuantity>
        <fr:igdtName ref="mangold">Mangold, klein geschnitten</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>225 g</fr:igdtQuantity>
        <fr:igdtName ref="scampi">Scampi, aufgetaut</fr:igdtName>
