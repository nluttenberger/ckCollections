  <fr:recipeName>Kartoffel-Mangoldgem&#252;se</fr:recipeName>
  <fr:recipeKeywords />
  <fr:recipeIntro />
  <fr:recipeIngredients>
    <fr:igdtList>
      <fr:igdtListName />
      <fr:igdtListLine>
        <fr:igdtQuantity>350 g</fr:igdtQuantity>
        <fr:igdtName ref="kartoffel">Kartoffel(n), fest kochende</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>250 g</fr:igdtQuantity>
        <fr:igdtName ref="mangold">Mangoldstiel(e)</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>1</fr:igdtQuantity>
        <fr:igdtName ref="schalotten">Schalotte(n)</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>1 EL</fr:igdtQuantity>
        <fr:igdtName ref="butter">Butter</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>&#8539; Liter</fr:igdtQuantity>
        <fr:igdtName ref="kalbsfond">Kalbsfond aus dem Glas</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>1 Becher</fr:igdtQuantity>
        <fr:igdtName ref="sahne">Sahne</fr:igdtName>
      </fr:igdtListLine>
