      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>1 Stiel/e</fr:igdtQuantity>
        <fr:igdtName ref="oregano">Oregano</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity />
