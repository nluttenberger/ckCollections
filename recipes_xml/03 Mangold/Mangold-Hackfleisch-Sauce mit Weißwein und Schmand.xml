  <fr:recipeName>Mangold-Hackfleisch-Sauce mit Wei&#223;wein und Schmand</fr:recipeName>
  <fr:recipeKeywords />
  <fr:recipeIntro />
  <fr:recipeIngredients>
    <fr:igdtList>
      <fr:igdtListName />
      <fr:igdtListLine>
