      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>200 g</fr:igdtQuantity>
        <fr:igdtName ref="mangold">Mangold, gewaschen, Bl&#228;tter in feine Streifen geschnitten, Stiele in 2 cm lange St&#252;cke</fr:igdtName>
      </fr:igdtListLine>
      <fr:igdtListLine>
        <fr:igdtQuantity>2 m.-gro&#223;e</fr:igdtQuantity>
        <fr:igdtName ref="zwiebel">Zwiebel(n), gesch&#228;lt und fein gew&#252;rfelt</fr:igdtName>
      </fr:igdtListLine>
