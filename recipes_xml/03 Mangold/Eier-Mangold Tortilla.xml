  <fr:recipeName>Eier-Mangold Tortilla</fr:recipeName>
  <fr:recipeKeywords />
  <fr:recipeIntro />
  <fr:recipeIngredients>
    <fr:igdtList>
      <fr:igdtListName />
      <fr:igdtListLine>
        <fr:igdtQuantity>8 m.-gro&#223;e</fr:igdtQuantity>
